
<div class="container-xl" id="logQuery">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title title-head" style="height: 4.5rem;">
				<div class="row row-head">
					<div class="col-sm-6 my-auto">
						<h2>Manage <b>Logs</b></h2>
					</div>
					<div class="col-sm-6  my-auto">
						
						<% if(queryLog.length > 0) {%>
							<a href="/event" class="btn btn-secondary"> <span>Back</span></a>
							<%} else {%>
								<a href="/admin" class="btn btn-primary add-btn"> <span>Home</span></a>
								<% } %>
						<div class="container" id="box">
							<div class="row well">
								
								 <center>
									<a href="#" class="btn btn-danger" onclick="printInfo()">Print</a>
								</center>
								
							</div>
						</div>

					</div>
				</div>
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Frequency</th>
						<th>User Query</th>
						<th>Action</th>

					</tr>
				</thead>
				<tbody>
					<% 
					if(queryLog.length > 0)
					{
						for(var i=0; i < queryLog.length; i++) { %>
						<tr onclick="window.location='/queryLog/<%= queryLog[i]._id %>'" style="cursor: pointer;">

							<td>
								<%= queryLog[i].frequent %>
							</td>
							<td>
								<%= queryLog[i].distinct %>
							</td>
							<td>
								<a href="/queryLog/<%= queryLog[i].distinct %>?_method=DELETE" class="delete"><i
									class="material-icons"  title="Delete">&#xE872;</i></a>
							</td>
						</tr>

						<% }
					}
						
			    %>
							

				</tbody>
			</table>
		</div>
	</div>
	<!-- Delete Modal HTML -->
	<div id="deleteEmployeeModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<form action="/queryLog/<%= queryLog.query %>?_method=DELETE" method="post">
					<input type="hidden" name="_method" value="DELETE">
					<div class="modal-header">
						<h4 class="modal-title">Delete Log</h4>
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="row my-3">
						<div class="col-sm-12">
							<h5 class="text-center">Are You Sure?</h5>
							<p class="text-center text-secondary">Do you really want to delete these records? This process cannot be undone.</p>
						</div>
					</div>
					<div class="modal-footer justify-content-center">
						<input type="button" class="btn btn-secondary mx-2" data-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-danger mx-2" value="Delete">
					</div>
				</form>
			</div>
		</div>
	</div>

	<script>
		function printInfo() {
			var prtContent = document.getElementById("logQuery");
			var WinPrint = window.open('', '', 'left=0,top=0,width=800,height=900,toolbar=0,scrollbars=0,status=0');
			WinPrint.document.write(prtContent.innerHTML);
			WinPrint.document.close();
			WinPrint.focus();
			WinPrint.print();
			WinPrint.close();
		}
	</script>
