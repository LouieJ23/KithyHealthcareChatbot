<div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper" style="width: max-content;">
			<div class="table-title title-head" style="height: 4.5rem;">
				<div class="row row-head" >
					<div class="col-sm-6 my-auto">
						<h2>Manage <b>Appointment</b></h2>
					</div>
					<div class="col-sm-6 my-auto">
						<a href="#addEmployeeModal" class="btn btn-success add-btn" data-toggle="modal"><i
								class="material-icons">&#xE147;</i> <span>Add Appointment</span></a>

						<% if(! appointments.length> 0) {%>
							<a href="/appointment" class="btn btn-secondary"> <span>Back</span></a>
							<%} else {%>
								<a href="/admin" class="btn btn-primary"> <span>Home</span></a>
								<% } %>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12">
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>
									#
								</th>
								<th>Category</th>
								<th>Doctor Option</th>
								<th>Type of Consultation</th>
								<th>Date of Consultation</th>
								<th>Time of Consultation</th>
								<th>First Name</th>
								<th>Last Name</th>
								<th>Sex</th>
								<th>Number</th>
								<th>Address</th>
								<th>Email</th>
								<th>Reason of Consultation</th>
								<th>Date Posted</th>
								<% if(! appointments.length> 0) {%>
									<th>Actions</th>
									<%} %>
							</tr>
						</thead>
						<tbody>
							<% if(appointments.length> 0)
								{
								for(var i=0; i < appointments.length; i++) { %>
									<tr onclick="window.location='/appointment/<%= appointments[i]._id %>'"
										style="cursor: pointer;">
										<td>
											<%= i + 1  %>
										</td>
										<td>
											<%= appointments[i].category %>
										</td>
										<td>
											<%= appointments[i].docOption %>
										</td>
										<td>
											<%= appointments[i].consultType %>
										</td>
										<td>
											<%= appointments[i].dateOfConsultation.toString().slice(0,15) %>
										</td>
										<td>
											<%= appointments[i].timeOfConsultation %>
										</td>
										<td>
											<%= appointments[i].firstName %>
										</td>
										<td>
											<%= appointments[i].lastName %>
										</td>
										<td>
											<%= appointments[i].sex %>
										</td>
										<td>
											<%= appointments[i].number %>
										</td>
										<td>
											<%= appointments[i].address %>
										</td>
										<td>
											<%= appointments[i].email %>
										</td>
										<td>
											<%= appointments[i].reason %>
										</td>
										<td>
											<%= appointments[i].datePosted.toString().slice(0,15) %>
										</td>

									</tr>
									<%}}
									else {
										if(appointments.length == undefined) {
										%>
										<tr>
											<td>
												
											</td>
											<td>
												<%= appointments.category %>
											</td>
											<td>
												<%= appointments.docOption %>
											</td>
											<td>
												<%= appointments.consultType %>
											</td>
											<td>
												<%= appointments.dateOfConsultation.toString().slice(0,15) %>
											</td>
											<td>
												<%= appointments.timeOfConsultation %>
											</td>
											<td>
												<%= appointments.firstName %>
											</td>
											<td>
												<%= appointments.lastName %>
											</td>
											<td>
												<%= appointments.sex %>
											</td>
											<td>
												<%= appointments.number %>
											</td>
											<td>
												<%= appointments.address %>
											</td>
											<td>
												<%= appointments.email %>
											</td>
											<td>
												<%= appointments.reason %>
											</td>
											<td>
												<%= appointments.datePosted.toString().slice(0,15) %>
											</td>

											<td>
												<a href="#editEmployeeModal" class="edit" data-toggle="modal"><i
														class="material-icons" data-toggle="tooltip"
														title="Edit">&#xE254;</i></a>
												<a href="#deleteEmployeeModal" class="delete" data-toggle="modal"><i
														class="material-icons" title="Delete">&#xE872;</i></a>
											</td>
										</tr>
										<%} }%>
											<tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<!-- Add Modal HTML -->
	<div id="addEmployeeModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<form action="/appointment" method="post">
					<div class="modal-header">
						<h4 class="modal-title">Add Appointment</h4>
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">
						<div class="form-group">
							<label>Category</label>
							<!-- <input type="text" name="category" class="form-control" required> -->
							<select class="form-select my-2" aria-label="Default select" name="category" required>
								<option value="" disabled selected></option>
								<option value="Primary Care Consultation">Primary Care Consultation</option>
								<option value="Specialty Consultation">Specialty Consultation</option>
								<option value="General Lab Tests">General Lab Tests</option>
								<option value="COVID-19 Tests">COVID-19 Tests</option>
								<option value="Other Diagnostic Procedures">Other Diagnostic Procedures</option>
							</select>
						</div>
						<div class="form-group">
							<label>Doctor Options</label>
							<!-- <input type="text" name="docOption" class="form-control" required> -->
							<select class="form-select my-2" aria-label="Default select example" name="docOption" required>
								<option disabled selected></option>
								<option value="Dr.1">Dr.1</option>
								<option value="Dr.2">Dr.2</option>
								<option value="Dr.3">Dr.3</option>
								<option value="Dr.4">Dr.4</option>
							</select>
						</div>
						<div class="form-group">
							<label>Type of Consultation</label>
							<!-- <textarea class="form-control" name="consultType" required></textarea> -->
							<select class="form-select" aria-label="Default select example" name="consultType" required>
								<option value="" disabled selected></option>
								<option value="Initial Consultation">Initial Consultation</option>
								<option value="Follow-up Consultation">Follow-up Consultation</option>
								<option value="Work Clearance/Medical Certificate">Work Clearance/Medical Certificate
								</option>
								<option value="Others">Others</option>
							</select>
						</div>
						
								<div class="form-group">
									<label>Date Of Consultation </label>
									<input type="date" name="dateOfConsultation" class="form-control" required>
								</div>

							<div class="row d-flex">
									<div class="form-group d-inline col-sm">
										<label>Time Of Consultation</label>
										<input type="time" name="timeOfConsultation" class="form-control"
											placeholder="00:00 AM/PM" required>
									</div>
									<script type="text/javascript">
										$('#timepicker1').timepicker({ use24hours: true });
									</script>

								<div class="col-sm-6">
									<label for="sex">Sex</label>
									<div class="row my-auto" style="border: 1px solid lightgray; width: max-content;  max-width: fit-content;
									padding-left: 17px;
									padding-right: 9px;
									padding-top: 6px;
									height: 38px;">
										<div class="col-sm-6">
											<div class=" form-group py-auto" style="margin-bottom:0%">
												<input class="form-check-input" type="radio" name="sex" value="Male">
												<label for="sex">
													Male
												</label>
											</div>
										</div>
										<div class="col-sm-6">
											<div class="form-group ms-5-female">
												<input class="form-check-input" type="radio" name="sex" value="Female">
												<label class="form-check-label" for="sex">
													Female
												</label>
											</div>
										</div>
									</div>
								</div>
							</div>
						<div class="form-group">
							<label>First Name</label>
							<input type="text" name="firstName" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Last Name</label>
							<input type="text" name="lastName" class="form-control" required>
						</div>
						<!-- <div class="form-group">
							<label>Sex</label>
							<input type="radio" name="sex" class="form-control" required>
						</div> -->
						<!-- <div class="row d-flex py-2">
							<label for="sex">Sex</label>
								<div class=" form-group d-inline">
									<input class="form-check-input" type="radio" name="sex" value="Male">
									<label for="sex">
										Male
									</label>
								</div>
								<div class="form-group d-inline ms-5-female">
									<input class="form-check-input" type="radio" name="sex" value="Female">
									<label class="form-check-label" for="sex">
										Female
									</label>
								</div> -->
						<div class="form-group">
							<label>Mobile Number</label>
							<input type="text" name="number" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Address</label>
							<input type="text" name="address" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Email</label>
							<input type="text" name="email" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Reason of Consultation</label>
							<input type="text" name="reason" class="form-control" required>
						</div>

					</div>
					<div class="modal-footer">
						<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-info" value="Submit">
					</div>
				</form>
			</div>
		</div>
	</div>
	<!-- Delete Modal HTML -->
	<div id="deleteEmployeeModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<form action="/appointment/<%= appointments._id %>?_method=DELETE" method="post">
					<input type="hidden" name="_method" value="DELETE">
					<div class="modal-header">
						<h4 class="modal-title">Delete Appointment</h4>
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="row my-3">
						<div class="col-sm-12">
							<h5 class="text-center">Are You Sure?</h5>
							<p class="text-center text-secondary">Do you really want to delete these records? This
								process cannot be undone.</p>
						</div>
					</div>
					<div class="modal-footer justify-content-center">
						<input type="button" class="btn btn-secondary mx-2" data-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-danger mx-2" value="Delete">
					</div>
				</form>
			</div>
		</div>
	</div>
	<!-- Edit Modal HTML -->
	<% if(! appointments.length> 0) { %>
		<div id="editEmployeeModal" class="modal fade">
			<div class="modal-dialog">
				<div class="modal-content">
					<form action="/appointment/<%= appointments._id%>?_method=PUT" method="post">
						<input type="hidden" name="_method" value="PUT">
						<div class="modal-header">
							<h4 class="modal-title">Edit Appointment</h4>
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						</div>
						<div class="modal-body">
							<div class="form-group">
								<label>Category</label>
								<input type="text" name="category" class="form-control"
									value="<%=appointments.category%>" required>
							</div>
							<div class="form-group">
								<label>Doctor Option</label>
								<input type="text" name="docOption" class="form-control"
									value="<%=appointments.docOption%>" required>
							</div>
							<div class="form-group">
								<label>Type of Consultation</label>
								<input type="text" class="form-control" name="consultType"
									value="<%=appointments.consultType%>" required>
							</div>
							<div class="row">
							<div class="form-group col">
								<label>Date Of Consultation </label>
								<input type="date" name="dateOfConsultation" value="<%=appointments.dateOfConsultation%>" class="form-control" required>
							</div>
							<div class="form-group col" >
								<label>Time Of Consultation</label>
								<input type="time" name="timeOfConsultation" value="<%=appointments.timeOfConsultation%>" class="form-control"
									placeholder="00:00 AM/PM" required>
							</div>
						
							<script type="text/javascript">
								$('#timepicker1').timepicker({ use24hours: true });
							</script>
							</div>
							<div class="form-group">
								<label>First Name</label>
								<input type="text" class="form-control" name="firstName"
									value="<%=appointments.firstName%>" required>
							</div>
							<div class="form-group">
								<label>Last Name</label>
								<input type="text" class="form-control" name="lastName"
									value="<%=appointments.lastName%>" required>
							</div>
							<div class="form-group">
								<label>Sex</label>
								<input type="text" class="form-control" name="sex" value="<%=appointments.sex%>"
									required>
							</div>
							<div class="form-group">
								<label>Mobile Number</label>
								<input type="text" class="form-control" name="number" value="<%=appointments.number%>"
									required>
							</div>
							<div class="form-group">
								<label>Address</label>
								<input type="text" class="form-control" name="address" value="<%=appointments.address%>"
									required>
							</div>
							<div class="form-group">
								<label>Email</label>
								<input type="text" class="form-control" name="email" value="<%=appointments.email%>"
									required>
							</div>
							<div class="form-group">
								<label>Reason of Consultation</label>
								<input type="text" class="form-control" name="reason" value="<%=appointments.reason%>"
									required>
							</div>

						</div>
						<div class="modal-footer">
							<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
							<input type="submit" class="btn btn-info" value="Save">
						</div>
					</form>
				</div>
			</div>
		</div>

		<% } %>

