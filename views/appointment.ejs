<div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">
					<div class="col-sm-6">
						<h2>Manage <b>Appointment</b></h2>
					</div>
					<div class="col-sm-6">
						<a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i
								class="material-icons">&#xE147;</i> <span>Add New Appointment</span></a>
					
						<% if(! appointments.length > 0) {%>
							<a href="/appointment" class="btn btn-secondary"> <span>Back</span></a>
						<%}
							else {%>
								<a href="/admin" class="btn btn-primary"> <span>Home</span></a>
						<%	}
						%>

					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12">
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>Category</th>
								<th>Doctor Option</th>
								<th>Type of Consultation</th>
								<th>Date of Consultation</th>
								<th>Time of  Consultation</th>
								<th>Patient Name</th>
								<th>Sex</th>
								<th>Address</th>
								<th>Email</th>
								<th>Reason of Consultation</th>
								<th>Date Posted</th>
								<% if(! appointments.length > 0) {%>
									<th>Actions</th>
								<%} %>
							</tr>
						</thead>
						<tbody>
							<% 
							if(appointments.length > 0)
							{
								for(var i=0; i < appointments.length; i++) { %>
								<tr onclick="window.location='/appointment/<%= appointments[i]._id %>'" style="cursor: pointer;">
		
									<td>
										<%= appointments[i].category %>
									</td>
									<td>
										<%= appointments[i].docOption %>
									</td>
									<td>
										<%= appointments[i].consultType %>
									</td>
									<td>
										<%= appointments[i].dateOfConsultation %>
									</td>
									<td>
										<%= appointments[i].timeOfConsultation %>
									</td>
									<td>
										<%= appointments[i].patientName %>
									</td>
									<td>
										<%= appointments[i].sex %>
									</td>
									<td>
										<%= appointments[i].address %>
									</td>
									<td>
										<%= appointments[i].email %>
									</td>
									<td>
										<%= appointments[i].reason %>
									</td>
									<td>
										<%= appointments[i].datePosted %>
									</td>
									
								</td>
								</tr>
		
								<% }}
								else { %>
									<tr>
			
										<td>
											<%= appointments.category %>
										</td>
										<td>
											<%= appointments.docOption %>
										</td>
										<td>
											<%= appointments.consultType %>
										</td>
										<td>
											<%= appointments.dateOfConsultation %>
										</td>
										<td>
											<%= appointments.timeOfConsultation %>
										</td>
										<td>
											<%= appointments.patientName %>
										</td>
										<td>
											<%= appointments.sex %>
										</td>
										<td>
											<%= appointments.address %>
										</td>
										<td>
											<%= appointments.email %>
										</td>
										<td>
											<%= appointments.reason %>
										</td>
										<td>
											<%= appointments.datePosted %>
										</td>
		
										<td>
											<a href="#editEmployeeModal" class="edit" data-toggle="modal"><i class="material-icons"
												data-toggle="tooltip" title="Edit" >&#xE254;</i></a>
												<a href="#deleteEmployeeModal" class="delete" data-toggle="modal"><i
													class="material-icons"  title="Delete">&#xE872;</i></a>
										</td>
									</tr>
								<%} %>
									<tr>
		
						</tbody>
					</table>
				</div>
			</div>
			<!-- <div class="clearfix">
				<div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
				<ul class="pagination">
					<li class="page-item disabled"><a href="#">Previous</a></li>
					<li class="page-item"><a href="#" class="page-link">1</a></li>
					<li class="page-item"><a href="#" class="page-link">2</a></li>
					<li class="page-item active"><a href="#" class="page-link">3</a></li>
